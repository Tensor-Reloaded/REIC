<div class="wf-section">
    <div class="introheader cc-subpage">
        <div class="intro-content">
            <div class="introtitle">Results<br></div>
        </div>
    </div>
</div>


<div class="section cc-store-home-wrap">
    <h2 style="text-align: center">Solar Energy Output</h2>
    <div class="columns w-row">
        <div class="column w-col w-col-6" style="text-align:center; padding-top: 50px;">
            <canvas class="solarChartcanvas" id="solarChart" style="width:100%; max-width:700px"></canvas>
        </div>
        <div class="column w-col w-col-6">
            <table>
                <tr>
                    <td>Location:</td>
                    <td>@ViewBag.Location</td>
                </tr>
                <tr>
                    <td>Roof width:</td>
                    <td>@ViewBag.RoofWidth m&#178</td>
                </tr>
                <tr>
                    <td>Roof Length:</td>
                    <td>@ViewBag.RoofLength m&#178</td>
                </tr>
                <tr>
                    <td>Slope (Tilt):</td>
                    <td>@ViewBag.Slope &#176</td>
                </tr>
                <tr>
                    <td>Orientation (Hemisphere):</td>
                    <td>@ViewBag.Orientation</td>
                </tr>
                <tr>
                    <td>Panel:</td>
                    <td>@ViewBag.Panel</td>
                </tr>
                <tr>
                    <td>Panel Efficiency:</td>
                    <td>@ViewBag.PanelEfficieny %</td>
                </tr>
                <tr>
                    <td>Panel Area:</td>
                    <td>@ViewBag.PanelArea  m&#178</td>
                </tr>
                <tr>
                    <td>Panel Type:</td>
                    <td>@ViewBag.PanelType</td>
                </tr>
                <tr>
                    <td> <b>Solar Energy Output: </b></td>
                    <td><b>@ViewBag.AnnualEnergy kWh</b></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<hr/>

