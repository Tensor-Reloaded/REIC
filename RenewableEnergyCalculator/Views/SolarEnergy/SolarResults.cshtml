<div class="section cc-store-home-wrap">
    <form>
        <div class="center">
            <label for="Email">Enter your email:</label>
            <input type="email" class="input w-input" id="email" name="Email" required>
            <input type="hidden" value=@ViewBag.Energy name="info" />
            <button type="submit">Submit</button>
        </div>
    </form>
</div>

<script>
    var xValues = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
    var energies = @Html.Raw(Json.Encode(@ViewBag.MonthlyEnergyArray));
    var yValues = [];

    for (var i in energies)
        yValues.push([i, energies[i]]);

    new Chart("solarChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: "brown",
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Monthly Solar Energy Output"
            }
        }
    });
</script>
